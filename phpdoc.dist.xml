<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor>
    <title>Knightingale</title>
    <parser>
        <encoding>utf-8</encoding>
        <target>./build/phpdoc/build</target>
        <markers>
            <item>TODO</item>
            <item>FIXME</item>
        </markers>
        <extensions>
            <extension>php</extension>
        </extensions>
        <files>
            <ignore-hidden>true</ignore-hidden>
            <ignore-symlinks>true</ignore-symlinks>
        </files>
        <visibility />
    </parser>
    <files>
        <directory>./src</directory>
    </files>
    <transformer>
        <target>./build/phpdoc</target>
    </transformer>
    <logging>
        <level>error</level>
    </logging>
    <transformations>
        <template name="responsive" />
    </transformations>
</phpdocumentor>
